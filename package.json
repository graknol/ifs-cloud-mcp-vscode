{
  "name": "ifs-cloud-mcp-vscode",
  "displayName": "IFS Cloud MCP Server",
  "description": "Easy installation and activation of IFS Cloud MCP Server for enhanced development experience",
  "version": "0.0.1",
  "publisher": "sindrelinden",
  "license": "MIT",
  "icon": "icon.png",
  "author": {
    "name": "Sindre van der Linden",
    "url": "https://www.linkedin.com/in/sindre-v-b8a3269b/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/graknol/ifs-cloud-mcp-vscode"
  },
  "keywords": [
    "ifs",
    "cloud",
    "mcp",
    "model-context-protocol",
    "development",
    "tools",
    "server",
    "ai",
    "assistant"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ifs-cloud-mcp.install",
        "title": "Install IFS Cloud MCP Server",
        "category": "IFS Cloud"
      },
      {
        "command": "ifs-cloud-mcp.importZip",
        "title": "Import IFS Cloud ZIP File",
        "category": "IFS Cloud"
      },
      {
        "command": "ifs-cloud-mcp.showInstructions",
        "title": "Show ZIP Import Instructions",
        "category": "IFS Cloud"
      },
      {
        "command": "ifs-cloud-mcp.start",
        "title": "Start IFS Cloud MCP Server",
        "category": "IFS Cloud"
      },
      {
        "command": "ifs-cloud-mcp.stop",
        "title": "Stop IFS Cloud MCP Server",
        "category": "IFS Cloud"
      },
      {
        "command": "ifs-cloud-mcp.status",
        "title": "Check IFS Cloud MCP Server Status",
        "category": "IFS Cloud"
      },
      {
        "command": "ifs-cloud-mcp.configure",
        "title": "Configure IFS Cloud MCP Server",
        "category": "IFS Cloud"
      },
      {
        "command": "ifs-cloud-mcp.selectVersion",
        "title": "Select IFS Cloud Version",
        "category": "IFS Cloud"
      },
      {
        "command": "ifs-cloud-mcp.listVersions",
        "title": "List Available Versions",
        "category": "IFS Cloud"
      },
      {
        "command": "ifs-cloud-mcp.troubleshoot",
        "title": "Troubleshoot Installation",
        "category": "IFS Cloud"
      },
      {
        "command": "ifs-cloud-mcp.startWebUI",
        "title": "Start Web UI",
        "category": "IFS Cloud"
      },
      {
        "command": "ifs-cloud-mcp.stopWebUI",
        "title": "Stop Web UI",
        "category": "IFS Cloud"
      },
      {
        "command": "ifs-cloud-mcp.showMcpOutput",
        "title": "Show MCP Server Output",
        "category": "IFS Cloud"
      },
      {
        "command": "ifs-cloud-mcp.showWebUIOutput",
        "title": "Show Web UI Output",
        "category": "IFS Cloud"
      },
      {
        "command": "ifs-cloud-mcp.openWebUI",
        "title": "Open Web UI in Browser",
        "category": "IFS Cloud"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "ifs-cloud-mcp.install"
        },
        {
          "command": "ifs-cloud-mcp.importZip"
        },
        {
          "command": "ifs-cloud-mcp.showInstructions"
        },
        {
          "command": "ifs-cloud-mcp.start"
        },
        {
          "command": "ifs-cloud-mcp.stop"
        },
        {
          "command": "ifs-cloud-mcp.status"
        },
        {
          "command": "ifs-cloud-mcp.configure"
        },
        {
          "command": "ifs-cloud-mcp.selectVersion"
        },
        {
          "command": "ifs-cloud-mcp.listVersions"
        },
        {
          "command": "ifs-cloud-mcp.troubleshoot"
        },
        {
          "command": "ifs-cloud-mcp.startWebUI"
        },
        {
          "command": "ifs-cloud-mcp.stopWebUI"
        },
        {
          "command": "ifs-cloud-mcp.showMcpOutput"
        },
        {
          "command": "ifs-cloud-mcp.showWebUIOutput"
        },
        {
          "command": "ifs-cloud-mcp.openWebUI"
        }
      ]
    },
    "configuration": {
      "title": "IFS Cloud MCP Server",
      "properties": {
        "ifsCloudMcp.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to the IFS Cloud MCP Server installation"
        },
        "ifsCloudMcp.installationPath": {
          "type": "string",
          "default": "",
          "description": "Directory where IFS Cloud MCP Server is installed"
        },
        "ifsCloudMcp.indexPath": {
          "type": "string",
          "default": "",
          "description": "Path to the IFS Cloud code index (legacy - use selectedVersion instead)"
        },
        "ifsCloudMcp.selectedVersion": {
          "type": "string",
          "default": "",
          "description": "Selected IFS Cloud version for version-based server startup"
        },
        "ifsCloudMcp.autoStart": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start the MCP server when VS Code opens"
        }
      }
    },
    "languages": [
      {
        "id": "marble",
        "aliases": [
          "IFS Cloud",
          "marble"
        ],
        "extensions": [
          ".marble",
          ".client",
          ".projection",
          ".fragment"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "marble",
        "scopeName": "source.marble",
        "path": "./syntaxes/marble.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "IFS Cloud Marble - Pastel Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/marble-dark-theme.json"
      }
    ],
    "snippets": [
      {
        "language": "marble",
        "path": "./snippets/marble.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}