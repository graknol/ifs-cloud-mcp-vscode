{
  "name": "ifs-cloud-mcp-vscode",
  "displayName": "IFS Cloud MCP Server",
  "description": "Transform IFS Cloud development with AI-powered code intelligence. One-click installation, ZIP import workflow, and intelligent analysis of 15,000+ source files.",
  "version": "1.0.0",
  "publisher": "sindrelinden",
  "enabledApiProposals": [
    "languageModelSystem"
  ],
  "license": "MIT",
  "icon": "icon.png",
  "author": {
    "name": "Sindre van der Linden",
    "url": "https://www.linkedin.com/in/sindre-v-b8a3269b/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/graknol/ifs-cloud-mcp-vscode"
  },
  "keywords": [
    "ifs",
    "cloud",
    "mcp",
    "model-context-protocol",
    "development",
    "tools",
    "server",
    "ai",
    "assistant"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Machine Learning",
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ifsCloudMcp.install",
        "title": "Install MCP Server",
        "category": "IFS Cloud MCP"
      },
      {
        "command": "ifsCloudMcp.showInstructions",
        "title": "Show Instructions",
        "category": "IFS Cloud MCP"
      },
      {
        "command": "ifsCloudMcp.openLifecycleWebsite",
        "title": "Download ZIP from IFS Lifecycle",
        "category": "IFS Cloud MCP"
      },
      {
        "command": "ifsCloudMcp.importZip",
        "title": "Import ZIP",
        "category": "IFS Cloud MCP"
      },
      {
        "command": "ifsCloudMcp.fastSetup",
        "title": "Fast Setup",
        "category": "IFS Cloud MCP"
      },
      {
        "command": "ifsCloudMcp.completeSetup",
        "title": "Complete Setup",
        "category": "IFS Cloud MCP"
      },
      {
        "command": "ifsCloudMcp.downloadPrebuiltIndexes",
        "title": "Download Pre-built Indexes",
        "category": "IFS Cloud MCP"
      },
      {
        "command": "ifsCloudMcp.analyzeCoupledCodebase",
        "title": "Analyze Codebase",
        "category": "IFS Cloud MCP"
      },
      {
        "command": "ifsCloudMcp.calculatePagerank",
        "title": "Calculate PageRank",
        "category": "IFS Cloud MCP"
      },
      {
        "command": "ifsCloudMcp.createEmbeddings",
        "title": "Create Embeddings",
        "category": "IFS Cloud MCP"
      },
      {
        "command": "ifsCloudMcp.reindexBm25s",
        "title": "Reindex BM25S",
        "category": "IFS Cloud MCP"
      },
      {
        "command": "ifsCloudMcp.startServer",
        "title": "Start MCP Server",
        "category": "IFS Cloud MCP"
      },
      {
        "command": "ifsCloudMcp.stopServer",
        "title": "Stop MCP Server",
        "category": "IFS Cloud MCP"
      },
      {
        "command": "ifsCloudMcp.listVersions",
        "title": "List Versions",
        "category": "IFS Cloud MCP"
      },
      {
        "command": "ifsCloudMcp.deleteVersion",
        "title": "Delete Version",
        "category": "IFS Cloud MCP"
      },
      {
        "command": "ifsCloudMcp.checkStatus",
        "title": "Check Status",
        "category": "IFS Cloud MCP"
      },
      {
        "command": "ifsCloudMcp.openCommandPalette",
        "title": "Open Command Palette",
        "category": "IFS Cloud MCP"
      },
      {
        "command": "ifsCloudMcp.smartServerToggle",
        "title": "Toggle MCP Server",
        "category": "IFS Cloud MCP"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "ifsCloudMcp.install"
        },
        {
          "command": "ifsCloudMcp.showInstructions"
        },
        {
          "command": "ifsCloudMcp.openLifecycleWebsite"
        },
        {
          "command": "ifsCloudMcp.importZip"
        },
        {
          "command": "ifsCloudMcp.fastSetup"
        },
        {
          "command": "ifsCloudMcp.completeSetup"
        },
        {
          "command": "ifsCloudMcp.downloadPrebuiltIndexes"
        },
        {
          "command": "ifsCloudMcp.analyzeCoupledCodebase"
        },
        {
          "command": "ifsCloudMcp.calculatePagerank"
        },
        {
          "command": "ifsCloudMcp.createEmbeddings"
        },
        {
          "command": "ifsCloudMcp.reindexBm25s"
        },
        {
          "command": "ifsCloudMcp.startServer"
        },
        {
          "command": "ifsCloudMcp.stopServer"
        },
        {
          "command": "ifsCloudMcp.listVersions"
        },
        {
          "command": "ifsCloudMcp.deleteVersion"
        },
        {
          "command": "ifsCloudMcp.checkStatus"
        }
      ]
    },
    "mcpServerDefinitionProviders": [
      {
        "id": "ifs-cloud.mcp-servers",
        "label": "IFS Cloud MCP Server"
      }
    ],
    "configuration": {
      "title": "IFS Cloud MCP Server",
      "properties": {
        "ifsCloudMcp.selectedVersion": {
          "type": "string",
          "default": "",
          "description": "Selected IFS Cloud version for MCP server operations"
        },
        "ifsCloudMcp.autoStart": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start the MCP server when VS Code opens"
        }
      }
    },
    "languages": [
      {
        "id": "marble",
        "aliases": [
          "IFS Cloud",
          "marble"
        ],
        "extensions": [
          ".marble"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "ifs-client",
        "aliases": [
          "IFS Client (*.client)",
          "ifs-client"
        ],
        "extensions": [
          ".client"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "ifs-projection",
        "aliases": [
          "IFS Projection (*.projection)",
          "ifs-projection"
        ],
        "extensions": [
          ".projection"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "ifs-fragment",
        "aliases": [
          "IFS Fragment (*.fragment)",
          "ifs-fragment"
        ],
        "extensions": [
          ".fragment"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "marble",
        "scopeName": "source.marble",
        "path": "./syntaxes/marble.tmLanguage.json"
      },
      {
        "language": "ifs-client",
        "scopeName": "source.client",
        "path": "./syntaxes/client.tmLanguage.json"
      },
      {
        "language": "ifs-projection",
        "scopeName": "source.projection",
        "path": "./syntaxes/projection.tmLanguage.json"
      },
      {
        "language": "ifs-fragment",
        "scopeName": "source.fragment",
        "path": "./syntaxes/fragment.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "marble",
        "path": "./snippets/marble.json"
      },
      {
        "language": "ifs-client",
        "path": "./snippets/marble.json"
      },
      {
        "language": "ifs-projection",
        "path": "./snippets/marble.json"
      },
      {
        "language": "ifs-fragment",
        "path": "./snippets/marble.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/node": "18.x",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}