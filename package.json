{
  "name": "ifs-cloud-mcp-vscode",
  "displayName": "IFS Cloud MCP Server",
  "description": "Easy installation and activation of IFS Cloud MCP Server for enhanced development experience",
  "version": "0.0.1",
  "publisher": "ifs-cloud-team",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/graknol/ifs-cloud-mcp-vscode"
  },
  "keywords": [
    "ifs",
    "cloud",
    "mcp",
    "model-context-protocol",
    "development",
    "tools",
    "server",
    "ai",
    "assistant"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ifs-cloud-mcp.install",
        "title": "Install IFS Cloud MCP Server",
        "category": "IFS Cloud"
      },
      {
        "command": "ifs-cloud-mcp.start",
        "title": "Start IFS Cloud MCP Server",
        "category": "IFS Cloud"
      },
      {
        "command": "ifs-cloud-mcp.stop",
        "title": "Stop IFS Cloud MCP Server",
        "category": "IFS Cloud"
      },
      {
        "command": "ifs-cloud-mcp.status",
        "title": "Check IFS Cloud MCP Server Status",
        "category": "IFS Cloud"
      },
      {
        "command": "ifs-cloud-mcp.configure",
        "title": "Configure IFS Cloud MCP Server",
        "category": "IFS Cloud"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "ifs-cloud-mcp.install"
        },
        {
          "command": "ifs-cloud-mcp.start"
        },
        {
          "command": "ifs-cloud-mcp.stop"
        },
        {
          "command": "ifs-cloud-mcp.status"
        },
        {
          "command": "ifs-cloud-mcp.configure"
        }
      ]
    },
    "configuration": {
      "title": "IFS Cloud MCP Server",
      "properties": {
        "ifsCloudMcp.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to the IFS Cloud MCP Server installation"
        },
        "ifsCloudMcp.indexPath": {
          "type": "string",
          "default": "",
          "description": "Path to the IFS Cloud code index"
        },
        "ifsCloudMcp.autoStart": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start the MCP server when VS Code opens"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}