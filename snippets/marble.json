{
  "Fragment Structure": {
    "prefix": "fragment",
    "body": [
      "fragment ${1:FragmentName};",
      "component ${2:COMPONENT};",
      "layer ${3:Core};",
      "description \"${4:Fragment description}\";",
      "",
      "--------------------------------- FRAGMENTS ---------------------------------",
      "",
      "",
      "----------------------------- CLIENT FRAGMENTS ------------------------------",
      "",
      "$5",
      "",
      "--------------------------- PROJECTION FRAGMENTS ----------------------------",
      "",
      "$6",
      ""
    ],
    "description": "IFS Fragment with client and projection fragment sections"
  },
  "Client Structure": {
    "prefix": "client",
    "body": [
      "client ${1:ClientName};",
      "component ${2:COMPONENT};",
      "layer ${3:Core};",
      "",
      "$4"
    ],
    "description": "IFS Client declaration"
  },
  "Projection Structure": {
    "prefix": "projection",
    "body": [
      "projection ${1:ProjectionName};",
      "component ${2:COMPONENT};",
      "layer ${3:Core};",
      "",
      "$4"
    ],
    "description": "IFS Projection declaration"
  },
  "Page": {
    "prefix": "page",
    "body": [
      "page ${1:Form} using ${2:Entity} {",
      "   label = \"${3:Page Title}\";",
      "   selector ${4:EntitySelector};",
      "   group ${5:EntityGroup};",
      "   $6",
      "}"
    ],
    "description": "IFS Page definition"
  },
  "Group": {
    "prefix": "group",
    "body": [
      "group ${1:GroupName} for ${2:Entity} {",
      "   label = \"${3:Group Label}\";",
      "   $4",
      "}"
    ],
    "description": "IFS Group definition"
  },
  "List": {
    "prefix": "list",
    "body": [
      "list ${1:ListName} for ${2:Entity} {",
      "   label = \"${3:List Label}\";",
      "   $4",
      "}"
    ],
    "description": "IFS List definition"
  },
  "Field": {
    "prefix": "field",
    "body": [
      "field ${1:FieldName} {",
      "   ${2:size = Small;}",
      "   $3",
      "}"
    ],
    "description": "IFS Field definition"
  },
  "Command": {
    "prefix": "command",
    "body": [
      "command ${1:CommandName} for ${2:Entity} {",
      "   label = \"${3:Command Label}\";",
      "   enabled = [${4:condition}];",
      "   execute {",
      "      $5",
      "   }",
      "}"
    ],
    "description": "IFS Command definition"
  },
  "Selector": {
    "prefix": "selector",
    "body": [
      "selector ${1:SelectorName} for ${2:Entity} {",
      "   label = \"${3:\\${Field1} - \\${Field2}}\";",
      "   static ${4:Field1};",
      "   static ${5:Field2};",
      "   $6",
      "}"
    ],
    "description": "IFS Selector definition"
  },
  "Entity": {
    "prefix": "entity",
    "body": [
      "entity ${1:EntityName} {",
      "   crud = ${2:Read, Update, Delete};",
      "   from = \"${3:table_name}\";",
      "   keys = ${4:KeyField};",
      "   ",
      "   $5",
      "}"
    ],
    "description": "IFS Entity definition"
  },
  "EntitySet": {
    "prefix": "entityset",
    "body": [
      "entityset ${1:EntitySetName} for ${2:Entity};"
    ],
    "description": "IFS EntitySet definition"
  },
  "Attribute": {
    "prefix": "attribute",
    "body": [
      "attribute ${1:AttributeName} ${2:Text} {",
      "   ${3:maxlength = 50;}",
      "   ${4:required = [true];}",
      "   $5",
      "}"
    ],
    "description": "IFS Attribute definition"
  },
  "Reference": {
    "prefix": "reference",
    "body": [
      "reference ${1:RefName}(${2:Field}) to ${3:Entity}(${4:Field}) {",
      "   label = \"${5:Reference Label}\";",
      "   $6",
      "}"
    ],
    "description": "IFS Reference definition"
  },
  "Function": {
    "prefix": "function",
    "body": [
      "function ${1:FunctionName} Parameter.${2:ParamStruct} : ${3:ReturnType} {",
      "   parameter ${2:ParamStruct} {",
      "      $4",
      "   }",
      "}"
    ],
    "description": "IFS Function definition"
  },
  "Action": {
    "prefix": "action",
    "body": [
      "action ${1:ActionName} {",
      "   initialcheck implementation;",
      "   parameter ${2:ParamName} ${3:Text};",
      "   $4",
      "}"
    ],
    "description": "IFS Action definition"
  },
  "Structure": {
    "prefix": "structure",
    "body": [
      "structure ${1:StructureName} {",
      "   $2",
      "}"
    ],
    "description": "IFS Structure definition"
  },
  "Enumeration": {
    "prefix": "enumeration",
    "body": [
      "enumeration ${1:EnumerationName} {",
      "   enumerationtype = ${2:Custom};",
      "   values = \"${3:Value1}\", \"${4:Value2}\", \"${5:Value3}\";",
      "}"
    ],
    "description": "IFS Enumeration definition"
  }
}