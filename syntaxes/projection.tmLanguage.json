{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "IFS Projection",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#projection-specific"
    },
    {
      "include": "#attribute-properties"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#declarations"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash",
          "begin": "//",
          "end": "$"
        },
        {
          "name": "comment.block",
          "begin": "/\\*",
          "end": "\\*/"
        },
        {
          "name": "comment.line.dashes",
          "match": "^\\s*-{10,}.*$"
        }
      ]
    },
    "projection-specific": {
      "patterns": [
        {
          "name": "meta.projection.header",
          "begin": "\\b(projection)\\s+([A-Z][a-zA-Z0-9_]*);",
          "end": "(?=^\\s*(?:entity|query|function|$))",
          "beginCaptures": {
            "1": {
              "name": "storage.type.declaration"
            },
            "2": {
              "name": "entity.name.type.projection"
            }
          },
          "patterns": [
            {
              "include": "$self"
            }
          ]
        },
        {
          "name": "meta.projection.use",
          "match": "\\b(use)\\s+([A-Z][a-zA-Z0-9_]*);",
          "captures": {
            "1": {
              "name": "keyword.control.import"
            },
            "2": {
              "name": "entity.name.type"
            }
          }
        }
      ]
    },
    "attribute-properties": {
      "patterns": [
        {
          "name": "meta.attribute.property.sql",
          "begin": "\\b(fetch|where|from)\\s*=\\s*\"",
          "end": "\";?",
          "beginCaptures": {
            "1": {
              "name": "storage.modifier"
            }
          },
          "contentName": "source.sql.embedded",
          "patterns": [
            {
              "include": "source.sql"
            },
            {
              "name": "constant.character.escape",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "meta.attribute.property",
          "match": "\\b(label|editable|visible|enabled|required|keys|component|layer|description|category|default|ludependencies)\\s*=",
          "captures": {
            "1": {
              "name": "storage.modifier"
            }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control",
          "match": "\\b(if|else|while|for|foreach|do|break|continue|return|try|catch|finally|throw|switch|case|default)\\b"
        },
        {
          "name": "storage.type.declaration",
          "match": "\\b(projection|entity|query|function|attribute|reference|array|parameter|entityset)\\b"
        },
        {
          "name": "keyword.other",
          "match": "\\b(use|attributes|keys|from|where|to|@Override|@DynamicComponentDependency)\\b"
        },
        {
          "name": "storage.modifier",
          "match": "\\b(public|private|protected|static|readonly|const|required|editable|visible|enabled)\\b"
        },
        {
          "name": "keyword.operator",
          "match": "\\b(and|or|not|is|as|new|null|true|false)\\b"
        },
        {
          "name": "support.type",
          "match": "\\b(Text|Number|Date|Boolean|Stream|Enumeration)\\b"
        }
      ]
    },
    "declarations": {
      "patterns": [
        {
          "name": "meta.entity.declaration",
          "begin": "\\b(@Override\\s+)?(entity)\\s+([A-Z][a-zA-Z0-9_]*)\\s*\\{",
          "end": "\\}",
          "beginCaptures": {
            "1": {
              "name": "keyword.other"
            },
            "2": {
              "name": "storage.type.declaration"
            },
            "3": {
              "name": "entity.name.type.entity"
            }
          },
          "patterns": [
            {
              "include": "$self"
            }
          ]
        },
        {
          "name": "meta.query.declaration",
          "begin": "\\b(query)\\s+([A-Z][a-zA-Z0-9_]*)\\s*\\{",
          "end": "\\}",
          "beginCaptures": {
            "1": {
              "name": "storage.type.declaration"
            },
            "2": {
              "name": "entity.name.type.query"
            }
          },
          "patterns": [
            {
              "include": "$self"
            }
          ]
        },
        {
          "name": "meta.function.declaration",
          "begin": "\\b(function)\\s+([A-Z][a-zA-Z0-9_]*)\\s+([A-Z][a-zA-Z0-9_]*)\\s*\\{",
          "end": "\\}",
          "beginCaptures": {
            "1": {
              "name": "storage.type.declaration"
            },
            "2": {
              "name": "entity.name.function"
            },
            "3": {
              "name": "support.type"
            }
          },
          "patterns": [
            {
              "include": "$self"
            }
          ]
        },
        {
          "name": "meta.attribute.declaration",
          "begin": "\\b(attribute)\\s+([A-Z][a-zA-Z0-9_]*)\\s+([A-Z][a-zA-Z0-9_]*)(?:\\([^)]*\\))?\\s*\\{",
          "end": "\\}",
          "beginCaptures": {
            "1": {
              "name": "storage.type.declaration"
            },
            "2": {
              "name": "variable.other.property"
            },
            "3": {
              "name": "support.type"
            }
          },
          "patterns": [
            {
              "include": "$self"
            }
          ]
        },
        {
          "name": "meta.attribute.simple",
          "match": "\\b(attribute)\\s+([A-Z][a-zA-Z0-9_]*)\\s+([A-Z][a-zA-Z0-9_]*)(?:\\([^)]*\\))?;",
          "captures": {
            "1": {
              "name": "storage.type.declaration"
            },
            "2": {
              "name": "variable.other.property"
            },
            "3": {
              "name": "support.type"
            }
          }
        },
        {
          "name": "meta.entityset.declaration",
          "match": "\\b(entityset)\\s+([A-Z][a-zA-Z0-9_]*)\\s+(for)\\s+([A-Z][a-zA-Z0-9_]*);",
          "captures": {
            "1": {
              "name": "storage.type.declaration"
            },
            "2": {
              "name": "entity.name.type.entityset"
            },
            "3": {
              "name": "keyword.other"
            },
            "4": {
              "name": "entity.name.type"
            }
          }
        },
        {
          "name": "meta.reference.declaration",
          "match": "\\b(reference)\\s+([A-Z][a-zA-Z0-9_]*)\\([^)]*\\)\\s+(to)\\s+([A-Z][a-zA-Z0-9_]*)\\([^)]*\\);",
          "captures": {
            "1": {
              "name": "storage.type.declaration"
            },
            "2": {
              "name": "variable.other.reference"
            },
            "3": {
              "name": "keyword.other"
            },
            "4": {
              "name": "entity.name.type"
            }
          }
        },
        {
          "name": "meta.parameter.declaration",
          "begin": "\\b(parameter)\\s+([A-Z][a-zA-Z0-9_]*)\\s+([A-Z][a-zA-Z0-9_]*)\\s*\\{",
          "end": "\\}",
          "beginCaptures": {
            "1": {
              "name": "storage.type.declaration"
            },
            "2": {
              "name": "variable.parameter"
            },
            "3": {
              "name": "support.type"
            }
          },
          "patterns": [
            {
              "include": "$self"
            }
          ]
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.decimal",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment",
          "match": "="
        },
        {
          "name": "keyword.operator.comparison",
          "match": "==|!=|<|>|<=|>=|<>"
        },
        {
          "name": "keyword.operator.logical",
          "match": "\\b(AND|OR|NOT|IN)\\b"
        },
        {
          "name": "keyword.operator.arithmetic",
          "match": "\\+|-|\\*|/|%"
        },
        {
          "name": "punctuation.separator",
          "match": "[,;]"
        },
        {
          "name": "punctuation.section.brackets",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.section.parens",
          "match": "[()]"
        },
        {
          "name": "punctuation.section.braces",
          "match": "[{}]"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "entity.name.type",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "variable.other",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  },
  "scopeName": "source.projection"
}